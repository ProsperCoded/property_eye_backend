# Application Configuration
APP_NAME="Property Eye Fraud Detection POC"
APP_VERSION="0.1.0"
DEBUG=False
LOG_LEVEL=INFO

# Database Configuration
# SQLite (default for POC)
DATABASE_URL=sqlite+aiosqlite:///./fraud_detection.db
# PostgreSQL (production-ready alternative)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/fraud_detection

# PPD (Price Paid Data) Storage Configuration
# Path to persistent volume for storing Parquet files
PPD_VOLUME_PATH=./data/ppd
# Compression algorithm: "snappy" (faster) or "zstd" (better compression)
PPD_COMPRESSION=snappy

# Land Registry API Configuration
# API key for UK Land Registry ownership verification
LAND_REGISTRY_API_KEY=your_api_key_here
LAND_REGISTRY_API_URL=https://api.landregistry.gov.uk

# Redis Configuration (for caching Land Registry API responses)
REDIS_URL=redis://localhost:6379/0

# CORS Configuration
# Comma-separated list of allowed origins for frontend integration
# CORS_ORIGINS=http://localhost:3000,https://app.propertyeye.com

# API Configuration
API_V1_PREFIX=/api/v1

# File Upload Configuration
MAX_UPLOAD_SIZE_MB=100
# Allowed file extensions: .csv, .xlsx, .xls, .pdf
